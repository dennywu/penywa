@model IList<Global.Repository.models.Customer>
<link href="@Url.Content("~/Content/customer/list.css")" type="text/css" rel="Stylesheet" />
<h2>Pelanggan</h2>
<table id='tblListCustomerContainer' cellspacing="0" cellpadding="0" width="100%">
    <tr>
        <td width="80%">
            <table id="tblListCustomer" cellpadding="0" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Nama</th>
                        <th>Sisa Tagihan</th>
                        <th width='55px'></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Global.Repository.models.Customer cust in Model)
                    {
                        <tr>
                            <td>@cust.Name</td>
                            <td>Rp @cust.Outstanding.ToString("N")</td>
                            <td>@Html.ActionLink("Ubah", "UpdateCustomer", new { custId = cust.Id })</td>
                        </tr>
                    } 
                </tbody>
            </table>
        </td>
        <td width="20%" valign="top">
            <div>
                @Html.ActionLink("Tambah Pelanggan", "AddCustomer", "Customer")
            </div>
        </td>
    </tr>
</table>
