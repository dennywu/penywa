@using (Html.BeginForm("AddCustomer","Customer", FormMethod.Post)){
    <table cellpadding="0" cellspacing="0" width="80%">
        <tr>
            <td>Nama</td>
            <td><input type='text' name='Name' required/></td>
        </tr>
        <tr>
            <td>Alamat</td>
            <td><textarea name='Alamat'></textarea></td>
        </tr>
        <tr>
            <td>Kota</td>
            <td><input type='text' name='Kota' required/></td>
        </tr>
        <tr>
            <td>Negara</td>
            <td><input type='text' name='Negara' required value="Indonesia"/></td>
        </tr>
        <tr>
            <td>KodePos</td>
            <td><input type='text' name="Kodepos" required/></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><input type='email' name='Email' required/></td>
        </tr>
        <tr>
            <td></td>
            <td><button type="submit">Tambah</button></td>
        </tr>
    </table>
}