@model Global.Repository.models.Customer
<h2>Ubah Pelanggan</h2>
@using (Html.BeginForm("UpdateCustomer","Customer", FormMethod.Post)){
    <table cellpadding="0" cellspacing="0" width="80%">
        <tr>
            <td>Nama</td>
            <td><input type='text' name='Name' required value='@Model.Name'/><input type='hidden' name='Id' required value='@Model.Id'/></td>
        </tr>
        <tr>
            <td>Alamat</td>
            <td><textarea name='Alamat'>@Model.Alamat</textarea></td>
        </tr>
        <tr>
            <td>Kota</td>
            <td><input type='text' name='Kota' required value='@Model.Kota'/></td>
        </tr>
        <tr>
            <td>Negara</td>
            <td><input type='text' name='Negara' required value="@Model.Negara"/></td>
        </tr>
        <tr>
            <td>KodePos</td>
            <td><input type='text' name="Kodepos" required value='@Model.KodePos'/></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><input type='email' name='Email' required value='@Model.Email'/></td>
        </tr>
        <tr>
            <td></td>
            <td><button type="submit">Ubah</button></td>
        </tr>
    </table>
}